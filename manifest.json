{
    "manifest_version": 3,
    "name": "My Extension",
    "icons": {
        "16": "icon/16.png",
        "32": "icon/32.png",
        "48": "icon/48.png",
        "128": "icon/128.png"
    },
    "version": "1.0",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/watch*"],
            "js": ["contentScript/d3.v5.min.js",
                "contentScript/newElement.js",
                "contentScript/resultListener.js",
                "contentScript/urlSend.js"],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "icon/32.png",
        "default_title": "Youtube comment viwer"
    },
    "permissions": [
        "scripting",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}